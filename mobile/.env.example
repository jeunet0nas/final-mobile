# Mobile App Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development (Local):
#   - iOS Simulator: http://localhost:5000/api
#   - Android Emulator: http://10.0.2.2:5000/api
#   - Physical Device: http://YOUR_IP_ADDRESS:5000/api (must be on same WiFi)
# Production: https://your-backend-domain.com/api
EXPO_PUBLIC_API_URL=http://localhost:5000/api

# API Request timeout in milliseconds (default: 30000 = 30 seconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# Enable API request logging for debugging
EXPO_PUBLIC_API_DEBUG=true

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App environment: development | staging | production
EXPO_PUBLIC_APP_ENV=development

# Enable mock data for testing without backend
EXPO_PUBLIC_USE_MOCK_DATA=false

# =============================================================================
# FIREBASE CONFIGURATION (Optional - for authentication later)
# =============================================================================

# Firebase Web Config
# Get these from Firebase Console > Project Settings > Web App
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable advanced analysis feature (requires authentication)
EXPO_PUBLIC_ENABLE_ADVANCED_ANALYSIS=false

# Enable offline mode with cached results
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false

# Maximum image size in MB before compression
EXPO_PUBLIC_MAX_IMAGE_SIZE_MB=10

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Sentry DSN for error tracking
EXPO_PUBLIC_SENTRY_DSN=

# Google Analytics Measurement ID
EXPO_PUBLIC_GA_MEASUREMENT_ID=
